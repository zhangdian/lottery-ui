<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout android:layout_width="match_parent" 
                  android:id="@+id/linearLayout2"  
                  android:gravity="center"
                  android:layout_height="50dp">
        
         <EditText
             android:id="@+id/ssh_input_show_rs"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:hint="@string/ssh_input_show_rs" />

    </LinearLayout>
    
    
    <LinearLayout android:layout_width="match_parent" 
                  android:id="@+id/linearLayout1"  
                  android:gravity="center"
                  android:layout_height="50dp">
        
         <EditText
             android:id="@+id/ssh_input_test_probability"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:hint="@string/ssh_input_test_probability" />

         <Button
             android:id="@+id/ssh_btn_test_probability"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/ssh_btn_test_probability" />

    </LinearLayout>

</LinearLayout>


